# API Configuration (now using local Astro endpoints)
PUBLIC_API_URL=http://localhost:4321

# Application Configuration
PUBLIC_APP_NAME=Webler
PUBLIC_APP_URL=http://localhost:4321

# GitHub Integration (server-side)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=optional_webhook_secret_for_verification

# Development Webhook URL (overrides auto-detection)
# Use your Tailscale or ngrok URL for development testing
DEV_WEBHOOK_URL=https://your-tailscale-url.ts.net

# GitHub Repository Configuration
PUBLIC_GITHUB_REPO=WebAsAService/base-template
PUBLIC_GITHUB_WORKFLOW=generate-client-site.yml

# Feature Flags
PUBLIC_ENABLE_ANALYTICS=false
PUBLIC_ENABLE_FEEDBACK=true
PUBLIC_ENABLE_DEBUG=false

# TanStack Query Configuration
PUBLIC_QUERY_STALE_TIME=300000
PUBLIC_QUERY_CACHE_TIME=600000
PUBLIC_STATUS_POLL_INTERVAL=5000

# API Timeouts (in milliseconds)
PUBLIC_API_TIMEOUT=30000
PUBLIC_HEALTH_CHECK_TIMEOUT=5000

# Error Handling
PUBLIC_MAX_RETRY_ATTEMPTS=3
PUBLIC_RETRY_DELAY=1000